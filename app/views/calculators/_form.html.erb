<%= semantic_form_for @calculator do |f| %>
  <%= f.inputs do %>
    <%= f.input :distance %>
    <%= f.input :consumption %>
    <%= f.input :price %>
    <%= f.input :routeTolls %>
    <%= f.input :toll %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
