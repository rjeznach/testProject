<h1>Listing calculators</h1>

<table>
  <tr>
    <th>Distance</th>
    <th>Consumption</th>
    <th>Price</th>
    <th>Routetolls</th>
    <th>Toll</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @calculators.each do |calculator| %>
  <tr>
    <td><%= calculator.distance %></td>
    <td><%= calculator.consumption %></td>
    <td><%= calculator.price %></td>
    <td><%= calculator.routeTolls %></td>
    <td><%= calculator.toll %></td>
    <td><%= link_to 'Show', calculator %></td>
    <td><%= link_to 'Edit', edit_calculator_path(calculator) %></td>
    <td><%= link_to 'Destroy', calculator, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

